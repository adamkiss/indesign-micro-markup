{
    "id": "com.adamkiss.magic-markup",
    "name": "Magic Markup",
    "version": "0.9.3",
    "main": "index.html",
    "host": [
        {
            "app": "ID",
            "minVersion": "19.0.0"
        }
    ],
    "manifestVersion": 5,
	"requiredPermissions": {
        "localFileSystem": "plugin",
        "network": {
            "domains": ["https://github.com", "https://adamkiss.com"]
        },
		"launchProcess": {
			"schemes": ["https"]
		}
    },
    "entrypoints": [
        {
            "type": "panel",
            "id": "magicMarkup",
            "minimumSize": {"width": 240, "height": 200},
            "maximumSize": {"width": 400, "height": 1600},
            "preferredDockedSize": {"width": 300, "height": 300},
            "preferredFloatingSize": {"width": 300, "height": 300},
            "label": {"default": "ðŸŒˆ Magic Markup"},
            "icons": [
                {
					"path": "icons/panel-dark.png", "species": [ "chrome" ],
                    "theme": ["darkest","dark","medium"],
                    "width": 24, "height": 24, "scale": [1,2]
                },
                {
                    "path": "icons/panel-light.png", "species": [ "chrome" ],
                    "theme": ["lightest","light"],
                    "width": 24, "height": 24, "scale": [1,2]
                }
            ]
        }
    ],
    "icons": [
        {
            "path": "icons/plugin.png", "species": ["pluginList"],
            "theme": ["darkest","dark","medium","lightest","light","all"],
            "scale": [1,2], "width": 24, "height": 24
        }
    ]
}
