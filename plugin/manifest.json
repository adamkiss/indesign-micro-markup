{
    "id": "com.adamkiss.magic-markup",
    "name": "ðŸŒˆ Magic Markup",
    "version": "0.5.1",
    "main": "index.html",
    "host": [
        {
            "app": "ID",
            "minVersion": "19.0.0"
        }
    ],
    "manifestVersion": 5,
	"requiredPermissions": {
        "localFileSystem": "plugin",
        "network": {
            "domains": ["https://github.com", "https://adamkiss.com"]
        },
		"launchProcess": {
			"schemes": ["https"]
		}
    },
    "entrypoints": [
		{
			"type": "command",
			"id": "applyMagic",
			"label": "âœ¨ Apply Magic Markup (command)"
		},
        {
            "type": "panel",
            "id": "magicMarkup",
            "minimumSize": {
                "width": 230,
                "height": 200
            },
            "maximumSize": {
                "width": 2000,
                "height": 2000
            },
            "preferredDockedSize": {
                "width": 300,
                "height": 300
            },
            "preferredFloatingSize": {
                "width": 300,
                "height": 300
            },
            "label": {
                "default": "ðŸŒˆ Magic Markup"
            },
            "icons": [
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/dark.png",
                    "scale": [
                        1,
                        2
                    ],
                    "theme": [
                        "darkest",
                        "dark",
                        "medium"
                    ]
                },
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/light.png",
                    "scale": [
                        1,
                        2
                    ],
                    "theme": [
                        "lightest",
                        "light"
                    ]
                }
            ]
        }
    ],
    "icons": [
        {
            "width": 48,
            "height": 48,
            "path": "icons/plugin.png",
            "scale": [
                1,
                2
            ],
            "theme": [
                "darkest",
                "dark",
                "medium",
                "lightest",
                "light",
                "all"
            ],
            "species": [
                "pluginList"
            ]
        }
    ]
}
