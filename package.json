  "license": "Apache-2.0",
  "files": [
    "template.json",
    "template"
  ],
  "devDependencies": {
    "esbuild": "^0.19.5"
  },
  "dependencies": {
    "highlight-in-textarea": "^1.1.0"
  }
}
